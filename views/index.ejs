<!-- ================= FILTER SECTION ================= -->
<section class="filter-section">
    <div class="filter-container">
        <form method="GET" action="/">

            <% 
              const selectedName = typeof name !== 'undefined' ? name : '';
              const selectedSpeciality = typeof speciality !== 'undefined' ? speciality : '';
              const selectedExperience = typeof experience !== 'undefined' ? experience : '';
              const selectedBio = typeof bio !== 'undefined' ? bio : '';
            %>

            <!-- ðŸ”¹ NAME FILTER -->
            <input 
                type="text" 
                name="name" 
                placeholder="Search by coach name"
                value="<%= selectedName %>"
            >

            <!-- ðŸ”¹ SPECIALITY FILTER -->
            <select name="speciality">
                <option value="">All Specialities</option>
                <option value="Yoga" <%= selectedSpeciality === 'Yoga' ? 'selected' : '' %>>Yoga</option>
                <option value="Fitness" <%= selectedSpeciality === 'Fitness' ? 'selected' : '' %>>Fitness</option>
                <option value="Mindfulness" <%= selectedSpeciality === 'Mindfulness' ? 'selected' : '' %>>Mindfulness</option>
                <option value="Mental Health" <%= selectedSpeciality === 'Mental Health' ? 'selected' : '' %>>Mental Health</option>
                <option value="Cardio Training" <%= selectedSpeciality === 'Cardio Training' ? 'selected' : '' %>>Cardio Training</option>
                <option value="Strength Training" <%= selectedSpeciality === 'Strength Training' ? 'selected' : '' %>>Strength Training</option>
                <option value="Nutrition" <%= selectedSpeciality === 'Nutrition' ? 'selected' : '' %>>Nutrition</option>
            </select>

            <!-- ðŸ”¹ EXPERIENCE FILTER -->
            <select name="experience">
                <option value="">Any Experience</option>
                <option value="0-2" <%= selectedExperience === '0-2' ? 'selected' : '' %>>0 - 2 years</option>
                <option value="3-5" <%= selectedExperience === '3-5' ? 'selected' : '' %>>3 - 5 years</option>
                <option value="6-10" <%= selectedExperience === '6-10' ? 'selected' : '' %>>6 - 10 years</option>
                <option value="10+" <%= selectedExperience === '10+' ? 'selected' : '' %>>10+ years</option>
            </select>

            <!-- ðŸ”¹ BIO FILTER -->
            <input 
                type="text" 
                name="bio" 
                placeholder="Search in bio"
                value="<%= selectedBio %>"
            >

            <button type="submit">Filter</button>
        </form>
    </div>
</section>

<!-- ================= COACHES SECTION ================= -->
<section class="teachers">
    <div class="teachers-container">
        <h2>Meet the Coaches</h2>

        <div class="teacher-grid">
            <% if (!coaches || coaches.length === 0) { %>
                <p>No coaches found.</p>
            <% } else { %>
                <% coaches.forEach(coach => { %>
                    <div class="teacher-card">
                        <img src="<%= coach.image %>" alt="<%= coach.name %>">
                        <h3><%= coach.name %></h3>
                        <p><strong>Speciality:</strong> <%= coach.speciality %></p>
                        <p><strong>Experience:</strong> <%= coach.experience %> years</p>
                        <p><%= coach.bio %></p>
                        <% if (coach.price) { %>
                            <p><strong>Price:</strong> $<%= coach.price %></p>
                        <% } %>
                    </div>
                <% }) %>
            <% } %>
        </div>

        <!-- ================= PAGINATION ================= -->
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <a href="?page=<%= currentPage - 1 %>&name=<%= selectedName %>&speciality=<%= selectedSpeciality %>&experience=<%= selectedExperience %>&bio=<%= selectedBio %>">Previous</a>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
                <a 
                  href="?page=<%= i %>&name=<%= selectedName %>&speciality=<%= selectedSpeciality %>&experience=<%= selectedExperience %>&bio=<%= selectedBio %>" 
                  class="<%= i === currentPage ? 'active' : '' %>">
                  <%= i %>
                </a>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <a href="?page=<%= currentPage + 1 %>&name=<%= selectedName %>&speciality=<%= selectedSpeciality %>&experience=<%= selectedExperience %>&bio=<%= selectedBio %>">Next</a>
            <% } %>
        </div>
    </div>
</section>

