<h2>Edit Coach</h2>
<form method="POST" action="/admin/coaches/edit/<%= coach._id %>">
  <input type="text" name="name" value="<%= coach.name %>" required>
  <input type="text" name="speciality" value="<%= coach.speciality %>" required>
  <input type="number" name="experience" value="<%= coach.experience %>" required>
  <input type="text" name="image" value="<%= coach.image %>" required>
  <textarea name="bio"><%= coach.bio %></textarea>
  <button type="submit">Update Coach</button>
</form>
